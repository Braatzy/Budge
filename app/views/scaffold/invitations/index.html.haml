%h1= t('.title')
%p= link_to t('.new_invitation'), new_scaffold_invitation_path

%table
  %thead
    %tr
      %th= Invitation.human_attribute_name :user_id
      %th= Invitation.human_attribute_name :program_id
      %th= Invitation.human_attribute_name :token
      %th= Invitation.human_attribute_name :email
      %th= Invitation.human_attribute_name :invited_user_id
      %th= Invitation.human_attribute_name :visited
      %th= Invitation.human_attribute_name :signed_up
      %th= Invitation.human_attribute_name :bought_program
      %th= Invitation.human_attribute_name :dollars_credit
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for invitation in @invitations
      %tr{ :class => cycle(:odd, :even) }
        %td= invitation.user_id
        %td= invitation.program_id
        %td= invitation.token
        %td= invitation.email
        %td= invitation.invited_user_id
        %td= invitation.visited
        %td= invitation.signed_up
        %td= invitation.bought_program
        %td= invitation.dollars_credit
        %td.action= link_to t('show'), [:scaffold, invitation]
        %td.action= link_to t('edit'), edit_scaffold_invitation_path(invitation)
        %td.action= link_to t('destroy'), [:scaffold, invitation], :confirm => t('are_you_sure'), :method => :delete
