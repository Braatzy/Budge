= form_for [:scaffold, @user_nag_mode] do |f|
  -if @user_nag_mode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_nag_mode.errors.count, "error")} prohibited this user_nag_mode from being saved:"
      %ul
        - @user_nag_mode.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :nag_mode_id
    = f.text_field :nag_mode_id
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :program_id
    = f.text_field :program_id
  .field
    = f.label :program_player_id
    = f.text_field :program_player_id
  .actions
    = f.submit 'Save'
