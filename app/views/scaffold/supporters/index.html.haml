%h1= t('.title')
%p= link_to t('.new_supporter'), new_scaffold_supporter_path

%table
  %thead
    %tr
      %th= Supporter.human_attribute_name :program_player_id
      %th= Supporter.human_attribute_name :program_id
      %th= Supporter.human_attribute_name :user_id
      %th= Supporter.human_attribute_name :invite_token
      %th= Supporter.human_attribute_name :active
      %th= Supporter.human_attribute_name :user_data
      %th= Supporter.human_attribute_name :invitation_data
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for supporter in @supporters
      %tr{ :class => cycle(:odd, :even) }
        %td= supporter.program_player_id
        %td= supporter.program_id
        %td= supporter.user_id
        %td= supporter.invite_token
        %td= supporter.active
        %td= supporter.user_data
        %td= supporter.invitation_data
        %td.action= link_to t('show'), [:scaffold, supporter]
        %td.action= link_to t('edit'), edit_scaffold_supporter_path(supporter)
        %td.action= link_to t('destroy'), [:scaffold, supporter], :confirm => t('are_you_sure'), :method => :delete
