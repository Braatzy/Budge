<h1>Listing user_comments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Related</th>
    <th>Related type</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_comments.each do |user_comment| %>
  <tr>
    <td><%= user_comment.user_id %></td>
    <td><%= user_comment.related_id %></td>
    <td><%= user_comment.related_type %></td>
    <td><%= user_comment.text %></td>
    <td><%= link_to 'Show', user_comment %></td>
    <td><%= link_to 'Edit', edit_user_comment_path(user_comment) %></td>
    <td><%= link_to 'Destroy', user_comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

